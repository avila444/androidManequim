<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_margin="0dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <!--Header-->
        <LinearLayout
            android:id="@+id/botaoEstudo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/green"
            android:gravity="center"
            >


            <TextView
                android:id="@+id/textStudy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/secular_one"
                android:text="@string/wc_title"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="30sp"
                />

        </LinearLayout><!--Header-->

        <!--Body Part #01-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            tools:context=".MainActivity"
            >

            <!--Position #01-->
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="25dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@drawable/trophy"
                    />

                <EditText
                    android:id="@+id/edit_campeao"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/hint_champion"
                    android:textAlignment="center"
                    android:textColor="@color/golden" />

            </LinearLayout><!--Position #01-->

        </LinearLayout><!--Body Part #01-->

        <!--Body Part #02-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            tools:context=".MainActivity"
            >

            <!--Position #02-->
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="25dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@drawable/silver_medal"
                    />

                <EditText
                    android:id="@+id/edit_segundo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/hint_second"
                    android:textAlignment="center"
                    android:textColor="@color/silver" />

            </LinearLayout><!--Position #02-->

            <!--Position #03-->
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="25dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:srcCompat="@drawable/bronze_medal"
                    />

                <EditText
                    android:id="@+id/edit_terceiro"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/hint_third"
                    android:textAlignment="center"
                    android:textColor="@color/bronze" />

            </LinearLayout><!--Position #03-->

        </LinearLayout><!--Body Part #02-->

        <!--Button view database-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="bottom"
            tools:context=".MainActivity"
            >


            <Button
                android:id="@+id/bt_enviar"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/green"
                android:text="@string/bt_db"
                />

            <LinearLayout
                android:id="@+id/botaoShowdb"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/green"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:fontFamily="@font/secular_one"
                    android:text="@string/view_db"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/arrow"
                    />

            </LinearLayout><!--Button view database-->

        </LinearLayout>

    </LinearLayout>

</LinearLayout>